          +author-date({authorName: "NASYIYA ULFA", date: "25 NOV 2022"})
      +page-section()
          +share({
            title: "Share :",
            shareLink: [
              {
                href: "#",
                iconName: "icon-twitter",
                iconWidth: "20",
                iconHeight: "16"
              },
              {
                href: "#",
                iconName: "icon-facebook",
                iconWidth: "12",
                iconHeight: "21"
              },
              {
                href: "#",
                iconName: "icon-instagram",
                iconWidth: "24",
                iconHeight: "24"
              },
            ],
          })
      +page-section()
          +hashtag({
            postTags: true,
            title: "Post Tags :",
            hashtags: [
              {
                text: "VRDesign"
