mixin sidebar(data = {})
  - const {title, sidebarContent} = data.sidebar;
  - const popularHashtag = data.popularHashtag;

  aside.sidebar&attributes(attributes)
    if title
      +title({tag: "h3", text: title}).title--h3.title--500
    ul.sidebar__list
      each item in sidebarContent
        li.sidebar__item
          +sidebar-card(item)
    if popularHashtag
      +hashtag({
        title: popularHashtag.title,
        hashtags: popularHashtag.hashtags,
      })
